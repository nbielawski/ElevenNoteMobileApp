<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElevenNoteMobileApp.Pages.NotesPage"
             NavigationPage.BackButtonTitle="false">
             
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Margin="10">
            <ListView x:Name="lvwNotes" ItemSelected="LvwNotes_OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding StarImage}" Text="{Binding Title}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="You don't have any notes. Why dont you add one?" x:Name="lblNoNotes" IsVisible="False"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>